<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E000000"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/myRelative"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:layout_alignParentStart="true"
            android:src="@drawable/back"
            android:contentDescription="@string/symbol"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/star"
            android:contentDescription="@string/symbol"
            android:layout_alignParentEnd="true"
            android:src="@drawable/empty_star"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/picture"
            android:contentDescription="@string/symbol"
            android:src="@drawable/borggreve"
            android:layout_centerInParent="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/good_name"
            android:layout_alignParentBottom="true"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                >
                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/good_price"
                    android:textColor="#D5000000"
                    android:layout_alignParentStart="true"
                    android:text="2222"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/good_weight"
                    android:textColor="#8A000000"
                    android:layout_below="@id/good_price"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="2222"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerInside"
                    android:id="@+id/good_car"
                    android:src="@drawable/shoplist"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/symbol"
                    android:layout_alignParentEnd="true"
                    android:background="#FFFFFFFF"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#1E000000"
                    android:layout_alignTop="@id/good_car"
                    android:layout_toStartOf="@id/good_car"
                    android:layout_marginTop="2dp"
                    />
                <View
                    android:layout_height="3dp"
                    android:layout_width="match_parent"
                    android:background="#1E000000"
                    android:layout_below="@id/good_car"
                    android:id="@+id/line"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多产品信息"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="20dp"
                    android:textColor="#000000"
                    android:id="@+id/information"
                    android:layout_below="@id/line"
                    android:textSize="18sp"
                    />

            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/more"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>


</LinearLayout>